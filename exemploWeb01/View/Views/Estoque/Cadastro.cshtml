
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/EstoqueCadastro.css" />
    <title>Cadastro</title>
</head>
<body>
    <div class="div-titulo"> 
        <a href="/estoque/" class="titulo">Lista de Estoques</a>
    </div>
    

    <form action="/estoque/store" method="post">
        <div class="div-campo">
            <label for="campo-nome">Nome</label>
            <input type="text" name="nome"
                   id="campo-nome" class="campo"/>
        </div>
        <div class="div-campo">
            <label for="campo-quantidade">Quantidade</label>
            <input type="text" name="quantidade"
                   id="campo-quantidade" class="campo" />
        </div>
        <div class="div-campo">
            <label for="campo-valor">Valor</label>
            <input type="text" name="valor"
                   id="campo-valor"class="campo" />
        </div>

        <button type="submit" class="botao">Salvar</button>
        </form>
</body>
</html>
